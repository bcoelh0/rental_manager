%h1 Users#sign_in
%p Find me in app/views/users/sign_in.html.haml

= form_for @user, :url => signing_in_users_path, :method => :post do |f|
  - if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :email
    = f.text_field :email
  .field
    = f.label :password
    = f.password_field :password
  .actions
    = f.submit 'Entrar', :class => "button"