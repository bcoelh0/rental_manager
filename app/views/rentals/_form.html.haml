= form_for @rental do |f|
  - if @rental.errors.any?
    #error_explanation
      %h2= "#{pluralize(@rental.errors.count, "error")} prohibited this rental from being saved:"
      %ul
        - @rental.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :person_id
    = f.number_field :person_id
  .field
    = f.label :house_id
    = f.number_field :house_id
  .field
    = f.label :start_date
    = f.date_select :start_date
  .field
    = f.label :end_date
    = f.date_select :end_date
  .field
    = f.label :notes
    = f.text_area :notes
  .actions
    = f.submit 'Save'
